<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fanjh.mine.carouseladvertisement.MainActivity"
    android:gravity="center"
    >

    <Button
        android:id="@+id/btn_view_pager_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view_mode"
        />

    <Button
        android:id="@+id/btn_fragment_pager_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fragment_pager_mode"
        />

    <Button
        android:id="@+id/btn_fragment_state_pager_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fragment_state_pager_mode"
        />

</LinearLayout>
